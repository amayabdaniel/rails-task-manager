<div class="wrapper">

  <div class="container">
   <h2>Edit this task: </h2>
    <%= form_for(@task) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :deadline %>
  <%= f.text_field :deadline %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

  </div>
</div>
